.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          = link_to do
            = fa_icon 'pencil-square-o', class: 'icon'
              %i.fa.fa-edit
        %li.side-header__box__edit-user
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
              %i.fa.fa-cog

  .groups
    %a(href="")
      .group
        %p.group__group-name  ふくまる
        %p.group__latest-message  1234
